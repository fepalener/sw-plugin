{% block local_shop_list %}
<sw-page class="local-shop-list">
    {% block local_shop_list_smart_bar_actions %}
    <template slot="smart-bar-actions">
        <sw-button variant="primary" :routerLink="{ name: 'local.shop.create' }">
            {{ $t('local-shop.list.addButtonText') }}
        </sw-button>
    </template>
    {% endblock %}

    <template slot="content">
        {% block local_shop_list_content %}
        <sw-entity-listing
            v-if="entities"
            :items="entities"
            :repository="repository"
            :showSelection="false"
            :columns="columns"
            detailRoute="local.shop.detail">
        </sw-entity-listing>
        {% endblock %}
    </template>
</sw-page>
{% endblock %}
